<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cv_alias_alert"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="50dp"
    android:layout_marginHorizontal="@dimen/_30sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alias_title"
            android:textSize="@dimen/_16ssp"
            android:textColor="?primary"/>

        <EditText
            android:id="@+id/edt_alias_alert"
            style="@style/EDITTEXT"
            android:maxLength="10"
            android:layout_marginTop="@dimen/_20sdp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_rm_alias_alert"
                style="@style/BUTTON_OUTLINED"
                android:text="@string/remove_alias"
                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_done_alias_alert"
                style="@style/BUTTON_FILL"
                android:text="@string/done_edit"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
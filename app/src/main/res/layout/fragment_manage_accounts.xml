<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/BODY"
    tools:context="fragments.ManageAccountsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_account"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_24ssp"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tool_back"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_manage_acc_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_30sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_manage_acc_frag"
            style="@style/BUTTON_FILL"
            android:layout_marginTop="35dp"
            android:text="@string/add_acc"/>

    </LinearLayout>

</LinearLayout>
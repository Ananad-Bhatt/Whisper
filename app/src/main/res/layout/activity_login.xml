<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    style="@style/BODY"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginEnd="-20dp"
        android:background="@drawable/tool_back_card">

        <TextView
            android:id="@+id/btn_log_signup"
            android:layout_height="wrap_content"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:text="@string/register_title"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:drawableEndCompat="@drawable/arrow_right" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/_30ssp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_desc"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/_15ssp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_70sdp"
        android:background="@drawable/tool_back"
        android:layout_gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_log_email"
                    style="@style/EDITTEXT"
                    android:hint="@string/email_hint"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:autofillHints="emailAddress"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/edt_log_password"
                    style="@style/EDITTEXT"
                    android:hint="@string/password_hint"
                    android:autofillHints="password"
                    android:inputType="textPassword"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txt_log_reset_pass"
                    style="@style/TEXT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_password"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:gravity="end"
                    android:layout_gravity="center"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_log_login"
                    style="@style/BUTTON_FILL"
                    android:text="@string/login_btn"
                    android:layout_marginTop="@dimen/_20sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="@dimen/_105sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/line"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TEXT"
                        android:textStyle="bold"
                        android:text="@string/another_option"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_17ssp" />

                    <LinearLayout
                        android:layout_width="@dimen/_105sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/line"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_log_google"
                    style="@style/BUTTON_FILL"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:text="@string/google_login"
                    android:drawableStart="@drawable/google"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>


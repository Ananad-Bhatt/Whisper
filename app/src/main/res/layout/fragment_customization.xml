<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?primary"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="fragments.CustomizationFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customize_title"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_40sdp"
        android:textSize="@dimen/_25ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/tool_back">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customize_title2"
                    android:textAllCaps="true"
                    android:textColor="?primary"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:textSize="@dimen/_20ssp"/>


                <RadioGroup
                    android:id="@+id/rg_color_cust_frag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">



                </RadioGroup>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
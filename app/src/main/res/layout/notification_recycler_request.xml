<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:elevation="50dp"
    android:backgroundTint="?primary"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_notification_request"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="fitXY"
                android:src="@drawable/info"/>

            <TextView
                android:id="@+id/tv_notification_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reject_notification_req"
                android:text="@string/accept"
                android:textColor="?primary"
                android:textSize="@dimen/_12ssp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/btn_back_fill"
                android:backgroundTint="#A2FFB1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_accept_notification_req"
                android:background="@drawable/btn_back_fill"
                android:text="@string/decline"
                android:textColor="?primary"
                android:textSize="@dimen/_12ssp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#FBCECE"/>

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>
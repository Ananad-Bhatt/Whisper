<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <attr name="primary" format="reference|color" />

    <style name="Base.Theme.Whisper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="primary">@color/primary1</item>
        <item name="android:statusBarColor" >?primary</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.Whisper" parent="Base.Theme.Whisper" />

    <!--    Red theme-->
    <style name="Theme.red" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="primary">@color/primary2</item>
        <item name="android:statusBarColor" >?primary</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!--    Green theme-->
    <style name="Theme.green" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="primary">@color/primary3</item>
        <item name="android:statusBarColor" >?primary</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!--    navy_blue theme-->
    <style name="Theme.navy_blue" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="primary">@color/primary4</item>
        <item name="android:statusBarColor" >?primary</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!--    orange theme-->
    <style name="Theme.orange" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="primary">@color/primary5</item>
        <item name="android:statusBarColor" >?primary</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!--    yellow theme-->
    <style name="Theme.yellow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="primary">@color/primary6</item>
        <item name="android:statusBarColor" >?primary</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>


    <!--    For dark mode-->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BODY">
        <item name="android:background">?primary</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="BUTTON_FILL">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">@dimen/_235sdp</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?primary</item>
        <item name="android:background">@drawable/btn_back_fill</item>
    </style>

    <style name="BUTTON_OUTLINED">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">@dimen/_235sdp</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_back_outlined</item>
    </style>

    <style name="EDITTEXT">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/edt_back</item>
        <item name="android:ems">15</item>
        <item name="android:textColorHint">?primary</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
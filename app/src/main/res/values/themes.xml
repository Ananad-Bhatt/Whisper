<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Whisper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor" >@color/main_act_primary</item>

    </style>

    <style name="Theme.Whisper" parent="Base.Theme.Whisper" />

<!--    For light mode-->
    <style name="TEXT">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="BODY">
        <item name="android:background">@color/secondary</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/primary_custom</item>
    </style>

    <style name="BUTTON_FILL">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:textColor">@color/btn_fill_text</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:background">@drawable/btn_back_fill</item>
    </style>

    <style name="BUTTON_OUTLINED">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/btn_outlined_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:background">@drawable/btn_back_outlined</item>
    </style>

    <style name="EDITTEXT">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/edt_back</item>
        <item name="android:ems">15</item>
    </style>

    <style name="EDITTEXT_FLOAT">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:ems">15</item>
    </style>
</resources>